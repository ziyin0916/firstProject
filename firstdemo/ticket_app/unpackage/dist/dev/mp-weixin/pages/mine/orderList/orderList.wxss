  font-weight: bold;
  color: #FE2536;
  line-height: 50rpx;
}
.order .order_item .right_view .item_bottom .number_view ._span {
  font-size: 26rpx;
  color: #333333;
  font-weight: normal;
  margin-left: 10rpx;
}
.order .order_item .right_view .item_bottom .price_view {
  font-size: 28rpx;
  color: #333333;
  line-height: 50rpx;
}
