.order .order_item .right_view .item_title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.order .order_item .right_view .item_content {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.order .order_item .right_view .item_content image {
  width: 30rpx;
  height: 30rpx;
}
.order .order_item .right_view .item_content view {
  width: calc(100% - 45rpx);
  font-size: 26rpx;
  color: #333333;
  margin-left: 15rpx;
  margin-top: 10rpx;
}
.order .order_item .right_view .item_bottom {
  width: 100%;
  height: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
