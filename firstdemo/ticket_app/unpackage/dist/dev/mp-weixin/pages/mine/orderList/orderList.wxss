/*头部导航*/
.segment_view {
  width: 100%;
  height: 92rpx;
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: #EEEEEE solid 2rpx;
  padding: 10rpx 30rpx 10rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.segment_view .segment_item {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: normal;
  margin: 0 20rpx;
  color: #333333;
}
.segment_view .segment_item.on {
  color: #000000;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: solid 6rpx #F7C642;
}
.order {
  width: 100%;
  background-color: white;
  margin-top: 20rpx;
  padding: 20rpx 30rpx 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.order .order_title {
  width: 100%;
  height: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
}
.order .order_title .order_status {
  color: #F7C642;
}
.order .order_item {
  width: 100%;
  min-height: 320rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.order .order_item image {
  width: 200rpx;
  height: 290rpx;
}
.order .order_item .right_view {
  width: calc(100% - 230rpx);
